# Cargar librerías
library(sf)
library(dplyr)
library(ggplot2)
library(readr)
library(reshape2)	
library(tidyr)
library(readxl)
library(colorspace)
library(ggspatial)
library(ggthemes)
library(wesanderson)
library(pdftools)

# Leer archivo SHP usando read_sf()
Manzanas_HIDALGO <- read_sf("D:\\Descargas\\SHAPEFILES_MEX\\13 HIDALGO\\MANZANA.shp")
Secciones_HIDALGO <- read_sf("D:\\Descargas\\SHAPEFILES_MEX\\13 HIDALGO\\SECCION.shp")
Municipios_HIDALGO_DF1 <- read_sf("D:\\Descargas\\SHAPEFILES_MEX\\13 HIDALGO\\MUNICIPIO.shp")
Resultados <- read_sf("D:\\52556\\Documents\\Proyecto F\\Resultados_24.csv")
Resultados <- Resultados %>% select( -"field_1")

Resultados$SECCION <- as.numeric(Resultados$SECCION)
Resultados$ENTIDAD <- as.numeric(Resultados$ENTIDAD)

Resultados_HIDALGO <- filter(Resultados, ENTIDAD == 13)

dataHIDALGO <- st_drop_geometry(Secciones_HIDALGO)
dataHIDALGO <- dataHIDALGO %>% select( -"ID",-"TIPO",-"CONTROL",-"GEOMETRY1_")
Resultados_HIDALGO <- left_join(Resultados_HIDALGO, dataHIDALGO, by = c("SECCION","ENTIDAD"))


Resultados_HIDALGO_DF1 <- filter(Resultados_HIDALGO, DISTRITO == 1)
Secciones_HIDALGO_DF1 <- filter(Secciones_HIDALGO,  DISTRITO == 1)
# Obtener los valores únicos de MUNICIPIO y DISTRITO_L de Secciones_HIDALGO_DF1
Municipios_DF1 <- unique(Secciones_HIDALGO_DF1$MUNICIPIO)

# Filtrar Municipios_HIDALGO_DF1
Municipios_HIDALGO_DF1 <- Municipios_HIDALGO_DF1[Municipios_HIDALGO_DF1$MUNICIPIO %in% Municipios_DF1, ]

Resultados_HIDALGO_DF1$SECCION <- as.numeric(Resultados_HIDALGO_DF1$SECCION)
Resultados_HIDALGO_DF1$ENTIDAD <- as.numeric(Resultados_HIDALGO_DF1$ENTIDAD)

# Convertir datos a número
Resultados_HIDALGO_DF1 $`CANDIDATO/A NO REGISTRADO/A` <- as.numeric(Resultados_HIDALGO_DF1 $`CANDIDATO/A NO REGISTRADO/A`)
Resultados_HIDALGO_DF1 $`VOTOS NULOS` <- as.numeric(Resultados_HIDALGO_DF1 $`VOTOS NULOS`)
Resultados_HIDALGO_DF1 $LISTA_NOMINAL_CASILLA <- as.numeric(Resultados_HIDALGO_DF1 $LISTA_NOMINAL_CASILLA)
Resultados_HIDALGO_DF1 $VaxMex_21 <- as.numeric(Resultados_HIDALGO_DF1 $VaxMex_21)
Resultados_HIDALGO_DF1 $Morena_21 <- as.numeric(Resultados_HIDALGO_DF1 $Morena_21)
Resultados_HIDALGO_DF1 $MC_21 <- as.numeric(Resultados_HIDALGO_DF1 $MC_21)
Resultados_HIDALGO_DF1 $porcentaje_VPM <- as.numeric(Resultados_HIDALGO_DF1 $porcentaje_VPM)
Resultados_HIDALGO_DF1 $porcentaje_Morena <- as.numeric(Resultados_HIDALGO_DF1 $porcentaje_Morena)
Resultados_HIDALGO_DF1 $porcentaje_MC <- as.numeric(Resultados_HIDALGO_DF1 $porcentaje_MC)

Resultados_HIDALGO_DF1 <- Resultados_HIDALGO_DF1 %>% 
    mutate( diferencia = porcentaje_VPM - porcentaje_Morena)

# Crear quintiles
quintilesF <- quantile(Resultados_HIDALGO_DF1$porcentaje_VPM, probs = c(0, 0.2, 0.4, 0.6, 0.8, 1), na.rm = TRUE)
quintilesM <- quantile(Resultados_HIDALGO_DF1$porcentaje_Morena, probs = c(0, 0.2, 0.4, 0.6, 0.8, 1), na.rm = TRUE)
quintilesD <- quantile(Resultados_HIDALGO_DF1$diferencia, probs = c(0, 0.2, 0.4, 0.6, 0.8, 1), na.rm = TRUE)


# Agrega columna con quintiles
Resultados_HIDALGO_DF1$quintilF <- cut(Resultados_HIDALGO_DF1$porcentaje_VPM, breaks = quintilesF, include.lowest = TRUE)
Resultados_HIDALGO_DF1$quintilM <- cut(Resultados_HIDALGO_DF1$porcentaje_Morena, breaks = quintilesM, include.lowest = TRUE)
Resultados_HIDALGO_DF1$quintilD <- cut(Resultados_HIDALGO_DF1$diferencia, breaks = quintilesD, include.lowest = TRUE)

Resultados_HIDALGO_DF1 <- Resultados_HIDALGO_DF1 %>% select( -"DISTRITO",-"DISTRITO_L",-"MUNICIPIO")

# Unir los dataframes por SECCION y ENTIDAD 
mapaHIDALGO_DF1 <- left_join(Secciones_HIDALGO_DF1, Resultados_HIDALGO_DF1, by = c("SECCION", "ENTIDAD"))

#Crea el mapa del distrito
HIDALGODF <- mapa300_24[mapa300_24$ENTIDAD == "13", ]

#Mapa Resultados
Mapa_Resultados <- ggplot() +
    annotation_map_tile(type = "osm", zoom = 10) +
    geom_sf(data = mapaHIDALGO_DF1, aes(fill = GANADOR), alpha = .7, color = NA) +
    geom_sf(data = Secciones_HIDALGO_DF1, aes(fill = NULL), color = "black", size = 0.1, alpha = 0) +
    geom_sf(data = Municipios_HIDALGO_DF1, aes(fill = NULL), color = "red", size = 0.1, alpha = 0) +
    geom_sf_label(data = Secciones_HIDALGO_DF1, aes(label = SECCION), size = 1, fill = "white", color = "black", alpha = 0 , label.size = NA) +
    geom_sf_label(data = Municipios_HIDALGO_DF1, aes(label = NOMBRE), size = 1, fill = "white", color = "red", alpha = 0 , label.size = NA) +
    scale_fill_manual(values = c("MORENA" = "brown", "VPM" = "blue", "MC" = "orange", "EMPATE" = "yellow" ), name = "Resultado electoral\n de la sección", labels = c("EMPATE","Juntos Haremos Historia", "Fuerza y Corazón por México")) +
    labs(title = "¿Dónde ganó cada coalición en el\nDistrito Federal 1 de Hidalgo?",
         subtitle = "Por sección electoral",
         caption = paste0("Elaborado por la Secretaría General CEN PRI\n(Fuente: INEGI e INE)")) +
    theme_economist_white(base_family="ITC Officina Sans") + # Usar un tema más elegante
    guides(fill = guide_legend(ncol = 2)) +
    theme(legend.position = "bottom",
          legend.background = element_rect(fill = "#014d64"),
          legend.text = element_text(size = 10, color = "white"),
          legend.title = element_text(size = 12, color = "white", face = "bold"),
          axis.text = element_blank(),  # Quitar texto de los ejes
          axis.title = element_blank(),  # Quitar título de los ejes
          axis.line = element_blank(),   # Quitar línea de los ejes
          panel.background = element_blank(),  # Quitar fondo del panel
          panel.grid.major = element_blank(),  # Quitar líneas de la grilla
          panel.grid.minor = element_blank(),   # Quitar líneas de la grilla menor
          plot.title = element_text(hjust = 0.5,size = 20, color = "#014d64", face = "bold"),  # Centrar y ajustar el tamaño del título
          plot.caption = element_text(hjust = 0.5,size = 14, color = "#014d64", face = "bold"),  # Centrar la caption y cambiar el color a blanco
          plot.subtitle = element_text(hjust = 0.5,size = 18, color = "#014d64", face = "bold"))  # Centrar el subtítulo
ggsave("D:\\52556\\Documents\\Distritos Federales 24\\HIDALGO\\Mapa_Resultados.pdf", 
       plot = Mapa_Resultados, 
       width = 8.5, height = 11, units = "in", device = "pdf")


